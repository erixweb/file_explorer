{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "file_explorer",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"fs": {
				"all": true,
				"scope": ["**", "$APP/databases/*"]
			},
			"path": {
				"all": true
			},
			"dialog": {
				"all": true
			},
			"shell": {
				"all": true,
				"scope": [
					{
						"name": "open-vscode",
						"cmd": "code",
						"args": [{ "validator": "\\S+" }]
					}
				]
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "erik.pages.dev",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "file_explorer",
				"width": 800,
				"height": 600
			}
		]
	}
}
